^set status_user6 $sar(g/ //$(sc1)up$(hblk)\($(sc3)$before(m $tdiff2(${time() - F}))m)$(hblk))
^set status_voice +
^set status_away  $(hblk)\($(sc3)away$(hblk)\)
^set status_hold_lines $(hblk)\[$(hwht)%B$(hblk)]
^set status_query $(sc1)query$(hblk)\($(sc1)%Q$(hblk))
}
stat5
^timer -del 14
@windowdoubles=[on]
^window double on
^timer -window -1 -refnum 14 -rep -1 60 ^set status_user6 $sar(g/ //$(sc1)up$(hblk)\($(sc1)$before(m $tdiff2(${time() - F}))m)$(hblk))
