subpackage stat4
## sbar done by albeniz 
## sbar modified by wicked
^set input_prompt $(sc2)-$(sc1)-$(sc3)[$(cl)amn::$(sc3)] 
alias stat4 {

^set status_format1 $(sc2)$(ld.ul_corner)$(sc1)$(ld.hline)$(sc3)[%*%=%@$(cl)%N%#$(sc3)] %A%M %> %Q $(sc3)[$(sc1)T$(cl)ime$(sc3)/$(cl)%T$(sc3)] $(sc3)[$(sc1)L$(cl)ag$(sc3)/$(cl)%1$(sc3)]$(sc1)$(ld.hline)$(sc2)$(ld.ur_corner)
^set status_format2 $(sc1)$(ld.ll_corner)$(sc3)$(ld.hline)[$(cl)%C$(sc3)%+$(sc3)] $(sc3)[$(sc1)o$(sc3)/$(cl)%2 $(sc1)n$(sc3)/$(cl)%3 $(sc1)v$(sc3)/$(cl)%4$(sc3)] %> %F $(sc3)[$(cl)%{2}S$(sc3)]$(sc1)$(ld.hline)$(sc2)$(ld.lr_corner)
^set status_notify $(sc3)[$(sc1)A$(cl)ct$(sc3)/$(cl)%F$(sc3)]
^set status_umode $(sc2)\($(cl)+%#$(sc2)\)
^set status_server %S
^set status_oper $(sc1)*
^set status_clock %T
^set status_lag %L
^set status_channel %C
^set status_mode $(sc1)\($(cl)+%+$(sc1)\)
^set status_chanop $(sc4)@$(sc3)
^set status_mail $(sc3)[$(sc1)M$(cl)ail$(sc3)/$(cl)%M$(sc3)]
^set status_voice +
^set status_away $(sc3)[$(sc1)A$(cl)way$(sc3)] 
^set status_query $(sc3)\[$(sc1)Q$(sc3):$(cl)%Q$(sc3)]
^set status_user5 $(cl)$S
^set status_format5 %> %5
}
stat4
@windowdoubles=[on]
^window double on
^timer -del 14
