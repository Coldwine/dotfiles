^sfset format_whois_header ----
^sfset format_whois_nick  \($1!$2@$3\)$country($rightw(1 $sar(g/./ / $3))))
^sfset format_whois_name  ircname  : $1-
^sfset format_whois_channels  channels : $1-
^sfset format_whois_security  security : connection to server is encrypted
^sfset format_whois_server  server   : $1 \($2-\)
^sfset format_whois_away  away     : $1-
^sfset format_whois_actual  actual   : $2 $msar(g/[/%K[%n/]/%K]%n/ $3)
^sfset format_whois_login  login    : as $3
^sfset format_whois_ident  ident    : identified
^sfset format_whois_connect  connect  : on $1 actual $6
^sfset format_whois_active  active   : is active
^sfset format_whois_root  root     : Services Root Admin
^sfset format_whois_operator  operator : $1 $2-
^sfset format_whois_admin  admin    : $1-    
^sfset format_whois_idle  idle     : $tdiff($1) idle
^sfset format_whois_unknown  $1: no such nick/channel
^sfset -format_whois_footer 
^sfset format_whowas_header ------------
^sfset format_whowas_nick  $1 was $2@$3)
^sfset format_whowas_name  ircname  : $1-
^sfset format_whowas_unknown  $1: there was no such nickname
^sfset format_whois_signon  signon   : $2-

